<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="400" prefWidth="600" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.proiect.controllers.AddToCartController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id="namefield" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextField fx:id="pricefield" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <TextField fx:id="stockfield" id="stockfield" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <TextField fx:id="categoryfield" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Company:" GridPane.columnIndex="0" GridPane.rowIndex="5" />

    <TextField fx:id="companyfield" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="8">
        <Button fx:id="backbutton" onAction="#handleBackAction" text="Back" />
    </HBox>
    <Text fx:id="AddToShoppingCartMessage" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="10" GridPane.valignment="CENTER">
      <GridPane.margin>
         <Insets right="25.0" />
      </GridPane.margin></Text>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="8">
        <Button fx:id="addtoshoppingcartbutton" onAction="#handleAddToShoppingCartAction" text="Add to shopping cart">
         <HBox.margin>
            <Insets left="35.0" />
         </HBox.margin></Button>
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
